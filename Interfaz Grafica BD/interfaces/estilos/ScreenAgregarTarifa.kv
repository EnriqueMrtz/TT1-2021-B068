#:import Factory kivy.factory.Factory
<MyPopUp@Popup>:
    auto_dismiss: False
    size_hint: 0.6,0.2
    pos_hint: {"x":0.2, "y":0.5}
    title: "Se ha cambiado la tarifa"
    Button:
        halign: 'center'
        spacing:10
        background_normal: './icons/box1.png'
        background_down: './icons/box2.png'
        text:"Aceptar"
        on_release: root.dismiss()
   
<ScreenAgregarTarifa>:
    canvas:
        Color:
            rgba: 0,0.0392,0.1373,.9
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint: 0.8,0.7
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                source: './icons/box4.png'
                size: self.size
                pos: self.pos
        padding: 80
        spacing: 30             
        Button:
            halign: 'center'
            spacing:10
            size_hint: 0.2,0.2
            text:"Cambiar tarifa"
            pos_hint: {"center_x" :0.2, "center_y":0.1}
            background_normal: './icons/box1.png'
            background_down: './icons/box2.png'
            border: 30, 30, 30, 30
            on_press: root.agregar_tarifa(root.tarifa)
            on_press: root.dismiss()

        Button:
            halign: 'center'
            spacing:10
            size_hint: 0.2,0.2
            text:"Cancelar"
            pos_hint: {"center_x" :0.2, "center_y":0.1}
            background_normal: './icons/box1.png'
            background_down: './icons/box2.png'
            border: 30, 30, 30, 30
            on_press: root.cancelar()
    BoxLayout:
        size_hint: 0.8,0.7  
        Label:
            font_size: 20
            color: 0.1961,0.1961,0.1961
            pos_hint: {"center_x" :0.7, "center_y":0.7}
            size_hint:0.2,0.2 
            text: "Escriba la tarifa por hora del uso del estacionamiento" 